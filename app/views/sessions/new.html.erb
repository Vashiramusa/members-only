<%provide(:title, "Sign in")%>
<div class="form-wrap">
  <h1 class="h1-heading" > Sign in </h1>

  <%=form_for(:sessions, url: login_path, html: { class: 'form-style' } ) do |f| %>
    <%= f.label :email, class: 'form-label' %> <br>
    <%= f.email_field :email, class: 'form-input' %> <br>

    <%= f.label :password, class: 'form-label' %> <br>
    <%= f.password_field :password, class: 'form-input' %> <br>

    <%= f.submit "Sign in", class: 'form-btn'%>
    
  <% end %>
</div>